body
  font-family: "proxima nova"
  font-size: 16px
  line-height: 1.5

h1, h2, h3, h4, h5, h6
  line-height: 1.1

h2
  font-size: 2.7rem
  font-weight: normal
  margin-bottom: 1.1rem
  margin-top: 1.1rem

h2 + p
  margin-bottom: 1.1rem
  margin-top: 1.1rem

p + .button
  margin-top: 3rem

a
  color: var(--purple)

